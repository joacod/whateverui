---
interface Props {
  href: string;
  target?: "_blank" | "_self" | "_parent" | "_top";
  type?: "primary" | "secondary" | "accent" | "neutral";
  size?: "xs" | "sm" | "base" | "lg" | "xl";
}

const { href, target, type = "neutral", size = "base" } = Astro.props;
---

<a
  href={href}
  target={target}
  class="flex items-center justify-center px-4 py-2 space-x-1 rounded cursor-pointer select-none w-fit"
  class:list={[
    {
      "bg-primary text-primary-content hover:bg-primary-focus active:bg-primary-active":
        type === "primary",
      "bg-secondary text-secondary-content hover:bg-secondary-focus active:bg-secondary-active":
        type === "secondary",
      "bg-accent text-accent-content hover:bg-accent-focus active:bg-accent-active":
        type === "accent",
      "bg-neutral text-neutral-content hover:bg-neutral-focus active:bg-neutral-active":
        type === "neutral",
    },
    {
      "text-xs": size === "xs",
      "text-sm": size === "sm",
      "text-base": size === "base",
      "text-lg": size === "lg",
      "text-xl": size === "xl",
    },
  ]}
>
  <slot name="before" />
  <slot />
  <slot name="after" />
</a>
